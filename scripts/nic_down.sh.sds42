#!/bin/bash

s=$1
trc=$2


while true

do
	ifdown enp4s0f1
	ifdown enp4s0f0

        echo delayed

	for ((i=0; i< $s; i++))
	do
	    sleep 1

	    d1=`date +"%d/%m %H:%M:%S.0"`
	    str="$d1 0x1234567:label_tc_delay:1: id_down_is_on"
	    echo $str >> $trc
	done

	#sleep $(( ( RANDOM % 30 )  + 1 ))

	ifup enp4s0f1
	ifup enp4s0f0

	echo Not delayed
	sleep 10
done

